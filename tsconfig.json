{
  "$schema": "https://json.schemastore.org/tsconfig",
  "files": [],
  "compilerOptions": {
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": [
      "./types",
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*/dist"
  ],
  "references": [
    {
      "path": "./packages/repco-activitypub"
    },
    {
      "path": "./packages/repco-cli"
    },
    {
      "path": "./packages/repco-common"
    },
    {
      "path": "./packages/repco-core"
    },
    {
      "path": "./packages/repco-graphql"
    },
    {
      "path": "./packages/repco-prisma"
    },
    {
      "path": "./packages/repco-prisma-generate"
    },
    {
      "path": "./packages/repco-server"
    },
    {
      "path": "./packages/repco-webcomponent"
    }
  ]
}
